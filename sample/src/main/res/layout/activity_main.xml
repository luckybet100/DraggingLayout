<?xml version="1.0" encoding="utf-8"?>
<dev.luckybet100.android.dragging.DragAndRemoveLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="dev.luckybet100.android.example.MainActivity">

    <dev.luckybet100.android.progress.CircleClockProgressView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        app:color="#FF0000"
        app:progress="0.75"
        app:strokeWidth="5dp" />

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FFFFFF"/>

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF00FF"/>

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF0000"/>

</dev.luckybet100.android.dragging.DragAndRemoveLayout>
